<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialog_sign_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="67px"
        android:text="今日签到成功，增加积分"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/dialog_sign_tv_score_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39px"
        android:textColor="@color/convert_back" />

    <Button
        android:id="@+id/dialog_sign_btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="67px"
        android:layout_marginLeft="73px"
        android:layout_marginRight="73px"
        android:layout_marginTop="61px"
        android:padding="0dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
</com.zhy.autolayout.AutoLinearLayout>