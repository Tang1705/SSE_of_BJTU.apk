<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bjtu.wanciwang.view.slide.SlideActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/el_splash_pager1"
            android:background="@mipmap/uoko_guide_background_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/el_splash_pager2"
            android:background="@mipmap/uoko_guide_background_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/el_splash_pager3"
            android:background="@mipmap/uoko_guide_background_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/splash_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_guide_skip"
            style="@style/WrapWrap"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:paddingRight="20dp"
            android:text="跳过"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btn_guide_enter"
            style="@style/WrapWrap"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:background="#00FF0000"
            android:padding="8dp"
            android:text="开启一段新的旅程"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:visibility="invisible" />
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/splash_iv_v1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:src="@drawable/bga_banner_point_enabled" />
            <ImageView
                android:id="@+id/splash_iv_v2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:src="@drawable/bga_banner_point_disabled" />
            <ImageView
                android:id="@+id/splash_iv_v3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:src="@drawable/bga_banner_point_disabled" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
